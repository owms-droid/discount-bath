---
const subtitle =
    Astro.props.subtitle ??
    "Transform Your Bathroom — Without Breaking the Bank";
const cta = Astro.props.cta ?? "Get Free Estimate";
---

<section class="bg-gray-100">
    <div
        class="section-wrapper grid grid-cols-1 lg:grid-cols-2 gap-10 items-center py-20"
    >
        <div>
            <p class="text-sm text-slate-500 uppercase tracking-wide">
                Affordable Luxury for Your Bathroom
            </p>
            <h1 class="mt-4 text-4xl md:text-5xl font-extrabold leading-tight">
                Beautiful Bathrooms<br />at Discount Prices
            </h1>
            <p class="mt-4 text-lg text-slate-600 max-w-xl">
                Expert bathroom remodeling that fits your style and budget. From
                simple updates to complete renovations, we deliver quality
                without the premium price tag.
            </p>

            <div class="mt-6 flex gap-4">
                <a href="#contact" class="btn btn-primary">{cta}</a>
                <a href="#gallery" class="btn btn-outline border-slate-200"
                    >View Gallery</a
                >
            </div>

            <div class="mt-8 flex gap-8">
                <div>
                    <p class="text-2xl font-bold">5K+</p>
                    <p class="text-sm text-slate-500">Bathrooms Renovated</p>
                </div>
                <div>
                    <p class="text-2xl font-bold">25+</p>
                    <p class="text-sm text-slate-500">Years Experience</p>
                </div>
                <div>
                    <p class="text-2xl font-bold">4.9★</p>
                    <p class="text-sm text-slate-500">Customer Rating</p>
                </div>
                <div>
                    <p class="text-2xl font-bold">97%</p>
                    <p class="text-sm text-slate-500">Satisfaction</p>
                </div>
            </div>
        </div>

        <div class="order-first lg:order-last">
            <div class="rounded-xl overflow-hidden shadow-lg">
                <!-- Replace with hero photo -->
                <img
                    src="/images/hero-example.jpg"
                    alt="Living room hero"
                    class="w-full h-80 object-cover"
                />
            </div>
        </div>
    </div>
</section>
