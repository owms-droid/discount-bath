---
interface Review {
    text: string;
    author: string;
    location?: string;
    rating: number;
    project?: string;
}

const reviews: Review[] = [
    {
        text: "Absolutely amazed by the quality and price! Our new bathroom looks like it's from a luxury magazine, but we paid half what other companies quoted.",
        author: "Sarah Martinez",
        location: "Local Homeowner",
        rating: 5,
        project: "Full Bathroom Remodel",
    },
    {
        text: "Finished on time and on budget. The team was professional and clean. Our updated bathroom has added significant value to our home.",
        author: "Michael Chen",
        location: "Verified Customer",
        rating: 5,
        project: "Master Bath Renovation",
    },
    {
        text: "The attention to detail was outstanding. From the initial design to the final touches, DiscountBath exceeded our expectations while keeping costs reasonable.",
        author: "Jennifer Roberts",
        location: "Repeat Customer",
        rating: 5,
        project: "Guest Bath Update",
    },
];

const stats = [
    { value: "500+", label: "Projects Completed" },
    { value: "4.9/5", label: "Average Rating" },
    { value: "98%", label: "Customer Satisfaction" },
];
---

<section
    id="reviews"
    class="py-16 bg-gradient-to-br from-[#0f4b40] to-[#1a6b5d] text-white"
>
    <div class="section-wrapper">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-white to-white/90">
                What Our Customers Say
            </h2>
            <p class="mt-4 text-white/90 max-w-2xl mx-auto leading-relaxed">
                Join thousands of satisfied homeowners who trusted DiscountBath
                for their bathroom renovation needs. Quality work at affordable
                prices, backed by our satisfaction guarantee.
            </p>
            <div
                class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6 max-w-3xl mx-auto"
            >
                {
                    stats.map((stat) => (
                        <div class="text-center p-6 rounded-xl bg-white/10 backdrop-blur-sm border border-white/5 hover:border-white/20 transition-all">
                            <div class="text-3xl font-bold text-white mb-1">
                                {stat.value}
                            </div>
                            <div class="text-sm text-[#7BB49A]">
                                {stat.label}
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {
                reviews.map((review) => (
                    <blockquote class="review-card bg-white/10 p-6 rounded-xl flex flex-col h-full hover:bg-[#1a6b5d] transition-all duration-300 cursor-pointer transform hover:-translate-y-1 hover:shadow-xl border border-white/5 hover:border-[#7BB49A]/30">
                        <div class="flex-grow">
                            <div class="mb-3 flex items-center justify-between">
                                <div class="flex items-center gap-1">
                                    <div class="text-yellow-400">
                                        {"★".repeat(review.rating)}
                                    </div>
                                    <div class="bg-[#7BB49A]/20 text-[#7BB49A] text-xs px-2 py-1 rounded-md ml-2">
                                        Verified Review
                                    </div>
                                </div>
                            </div>
                            <p class="italic text-white leading-relaxed">
                                "{review.text}"
                            </p>
                        </div>
                        <footer class="mt-6 pt-4 border-t border-white/10">
                            <div class="font-semibold text-white flex items-center gap-2">
                                — {review.author}
                            </div>
                            <div class="text-sm text-[#7BB49A] mt-1 flex items-center gap-2">
                                <span class="inline-block w-2 h-2 bg-[#7BB49A] rounded-full" />
                                {review.location}
                            </div>
                            {review.project && (
                                <div class="mt-2 inline-block bg-[#7BB49A]/10 border border-[#7BB49A]/20 px-3 py-1 rounded-full text-xs text-[#7BB49A]">
                                    {review.project}
                                </div>
                            )}
                        </footer>
                    </blockquote>
                ))
            }
        </div>
        <div class="mt-12 text-center">
            <a
                href="#contact"
                class="inline-flex items-center gap-2 bg-[#7BB49A] text-white px-8 py-4 rounded-full font-semibold hover:bg-[#8bc2a7] transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
            >
                Get Your Free Quote Today
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"></path>
                </svg>
            </a>
        </div>
    </div>
</section>