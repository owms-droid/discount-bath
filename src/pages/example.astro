---
import { generateSocialImage } from "../utils/generateSocialImage";
import BaseLayout from "../layouts/BaseLayout.astro";
//Generate social image at build time

const socialImagePath = '/images/social-card.png';
if (import.meta.env.PROD) {
    await generateSocialImage({
        title: 'Discount Bath - Professional Remodeling',
        description: 'Transform your bathroom with our expert remodeling services',
        outputPath: `./public${socialImagePath}`,
        width: 1200,
        height: 630,
        bgColor: 'var(--brand)'
    })
};
---

<BaseLayout
    title="Example Page"
    description="Example page description"
    image={socialImagePath}
>
    <h1>Example Page</h1>
    <p>This page includes a dynamically generated social card image.</p>
</BaseLayout>
