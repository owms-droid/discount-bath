---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import ServicesGrid from "../components/ServicesGrid.astro";
import BeforeAfter from "../components/BeforeAfter.astro";
import ReviewSection from "../components/ReviewSection.astro";
import Process from "../components/Process.astro";
import ProjectsGallery from "../components/ProjectsGallery.astro";
import CTASection from "../components/CTASection.astro";
import FAQ from "../components/FAQ.astro";
import Footer from "../components/Footer.astro";

const seoTitle = "DiscountBath - Beautiful Bathrooms at Affordable Prices";
const seoDescription =
	"Transform your bathroom for less with DiscountBath. Expert remodeling, quality fixtures, and professional installation at unbeatable prices. Get your free estimate today!";
---

<BaseLayout title={seoTitle} description={seoDescription}>
	<Header />
	<main>
		<Hero />
		<ServicesGrid />
		<BeforeAfter />
		<ReviewSection />
		<Process />
		<ProjectsGallery />
		<CTASection />
		<FAQ />
	</main>
	<Footer />
</BaseLayout>
